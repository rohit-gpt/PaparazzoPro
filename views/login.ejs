<!DOCTYPE html>
<html>
  <head>
    <link rel="stylesheet" href="/stylesheets/login.css">
    <title>PaparazzoPro: Login</title>
    <% include partials/links %>
  </head>
  <body>

    <% include partials/navbar %>

    <div class="row">
      <div class="col-xs-7">
      </div>
      <div class="col-xs-4">
        <center>
          <h1>Login</h1>
          <br>
          <br>
          <form action="/login" method="POST">
            <div class="form-group">
              <label>Email ID</label>
              <input type="email" name="username" class="form-control width" placeholder="email">
            </div>
            <div class="form-group">
              <label>Password</label>
              <input type="password" name="password" class="form-control width" placeholder="password">
            </div>
            <br>
            <button type="submit" class="btn btn-success btn-lg">Submit</button>
          </form>
          <br>
          <a href="/register">Don't Have An Account?</a>
        </center>
        <br>
      </div>
      <div class="col-xs-1">
      </div>
    </div>

<% include partials/footer %>
